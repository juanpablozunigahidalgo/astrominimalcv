---
import { getCollection } from 'astro:content';

interface Props {
	title: string;
}

const { title } = Astro.props;
const searchLang = Astro.url.searchParams.get('lang');
const routeLang = Astro.params.lang || 'english';
const lang = searchLang || routeLang || 'english';
const basePrefix = (import.meta.env.BASE_URL || '/').replace(/\/$/, '');

// Fetch translations
const generalEntries = await getCollection('general');
// Fallback to english if lang not found or data missing
const currentGeneral = generalEntries.find(entry => entry.slug === lang)?.data || 
                       generalEntries.find(entry => entry.slug === 'english')?.data || {};

const navItems = [
    { label: currentGeneral.cv || 'CV', href: `${basePrefix}/${lang}/cv`, id: 'cv' },
    { label: currentGeneral.contact || 'Contact', href: `${basePrefix}/${lang}/contact`, id: 'contact' },
    { label: currentGeneral.others || 'Other', href: `${basePrefix}/${lang}/others`, id: 'others' },
];

const aboutLink = { label: currentGeneral.about || 'About the site', href: `${basePrefix}/${lang}/about` };

const supportedLanguages = [
    { label: "English", value: "english" },
    { label: "Spanish", value: "spanish" },
    { label: "Italian", value: "italian" },
    { label: "Latin", value: "latin" },
    { label: "Swedish", value: "swedish" }
];

// Helper to get current page slug (e.g., 'cv', 'contact') to construct language links
const currentPath = Astro.url.pathname.replace(/\/$/, ''); // Remove trailing slash
const pathSegments = currentPath.split('/').filter(Boolean);
// If pathSegments has 1 element and it matches currentLang, it's a landing page for that lang
// If pathSegments is empty, it's root landing (english)
// If pathSegments has >1 element, second element is page
let currentPage = '';
if (pathSegments.length === 0) {
    currentPage = ''; // Root landing
} else if (pathSegments.length === 1 && pathSegments[0] === lang) {
    currentPage = ''; // Lang landing
} else if (pathSegments.length > 0) {
     // If first segment is lang, take second. If not (e.g. english default implicit?), take first.
     // Assuming structure is always /[lang]/page or /page (if default lang hidden)
     // Based on routing: src/pages/[lang]/...
     // If path is /cv -> segments=['cv'], lang='english' (default). currentPage='cv'.
     // If path is /spanish/cv -> segments=['spanish','cv'], lang='spanish'. currentPage='cv'.
     if (pathSegments[0] === lang) {
         currentPage = pathSegments[1] || '';
     } else {
         currentPage = pathSegments[0];
     }
}

const isLanding = currentPage === '';
const hideSidebar = currentPage === 'about';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Minimalist CV" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-WD5BB9J40J"></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-WD5BB9J40J');
        </script>
	</head>
	<body>
        <div class="layout-container">
            <div class="sidebar-wrapper">
                <header class="sidebar">
                    <!-- Title/Name in Sidebar for context -->
                    <div class="site-title">
                        <a href={`${basePrefix}/${lang}/cv`}>Minimalist</a>
                    </div>

                    <nav>
                        <ul class="nav-list">
                            {navItems.map(item => (
                                <li>
                                    <a href={item.href} class={currentPage === item.id ? 'active-link' : ''}>
                                        {item.label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </nav>
                    <div class="about-section">
                         <a href={aboutLink.href}>{aboutLink.label}</a>
                    </div>
                </header>
            </div>
            
            <main class="content">
		        <slot />
            </main>

            <aside class="lang-sidebar">
                <ul class="lang-list">
                    {supportedLanguages.map(l => (
                        <li class={lang === l.value ? 'active-item' : 'inactive-item'}>
                            <a href={isLanding ? `${basePrefix}/${l.value}` : `${basePrefix}/${l.value}/${currentPage}`} class={lang === l.value ? 'active-lang' : ''}>
                                {l.label}
                            </a>
                        </li>
                    ))}
                </ul>
            </aside>
        </div>
	</body>
</html>

<style is:global>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: white;
        font-family: Consolas, 'Courier New', monospace;
        color: black;
        font-size: 13px; /* Uniform font size */
    }

    a {
        color: inherit;
        text-decoration: none;
        transition: opacity 0.2s;
    }
    
    a:hover {
        text-decoration: none;
        opacity: 0.8;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .heading-1, h1, h2, h3, h4, h5, h6 {
        font-weight: bold;
        margin-bottom: 1rem;
        font-size: 13px; /* Ensure headings are same size */
        margin-top: 1.5rem;
    }
    
    .heading-1:first-child {
        margin-top: 0;
    }
</style>

<style>
    .layout-container {
        display: grid;
        grid-template-columns: 200px 1fr 150px;
        min-height: 100vh;
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px;
        gap: 40px;
    }

    /* Sidebar (Left) */
    .sidebar-wrapper {
        position: relative;
    }

    .sidebar {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: calc(100vh - 80px); /* Full height minus padding to push About to bottom */
        position: sticky;
        top: 40px;
        text-align: left;
    }

    .site-title {
        margin-bottom: 2rem;
        font-weight: bold;
        display: none; /* Hidden to match screenshot */
        font-size: 13px;
    }

    .nav-list {
        display: flex;
        flex-direction: column;
        gap: 0; /* Minimal gap */
        font-size: 13px; 
        margin-top: 120px; /* posicionar m√°s abajo como zunigajp */
        margin-left: 60px; /* mover ligeramente a la derecha dentro de la columna izquierda */
    }
    
    .nav-list li {
        margin-bottom: 2px;
    }

    .about-section {
        margin-left: 60px;
    }

    .active-link {
        font-weight: normal; /* Remove bold for active link to match uniform look */
        text-decoration: none; /* Minimalist */
    }

    /* Content (Center) */
    .content {
        text-align: left;
        padding-top: 0;
        line-height: 1.6;
    }

    /* Language Sidebar (Right) */
    .lang-sidebar {
        text-align: right;
        padding-top: 0;
    }

    .lang-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        position: sticky;
        top: 40px;
        align-items: flex-end; /* Align items to right */
    }
    
    .lang-list li.inactive-item {
        display: none;
    }

    .lang-list:hover li.inactive-item {
        display: block;
    }

    .active-lang {
        font-weight: normal;
    }

    @media (max-width: 768px) {
        .layout-container {
            display: flex;
            flex-direction: column;
            padding: 20px;
            gap: 20px;
        }

        .sidebar {
            height: auto;
            position: relative;
            top: 0;
            flex-direction: column;
            align-items: flex-start;
            justify-content: space-between;
            min-height: calc(100vh - 64px);
            border-bottom: 0;
            padding-bottom: 0;
            margin-bottom: 0;
        }

        .nav-list {
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 80px;
            margin-left: 24px;
        }

        .site-title {
            display: none; /* no mostrar en responsive como zunigajp */
        }

        .about-section {
            margin-left: 24px;
            margin-top: auto;
            margin-bottom: 24px;
            display: block;
        }
        /* Actually user wanted 'About' at bottom-left in Desktop. 
           On mobile, let's keep it simple or follow the flow. 
           But priority is Language Menu clutter fix. 
        */

        .lang-sidebar {
            text-align: right;
            position: fixed;
            top: 12px;
            right: 12px;
            width: auto;
            z-index: 100;
        }
        
        .lang-list {
            flex-direction: column; /* Keep column even on mobile for dropdown effect */
            gap: 0.5rem;
            position: relative;
            top: 0;
            flex-wrap: nowrap;
            align-items: flex-end;
            background-color: white; /* Ensure bg is white if it overlays */
            padding: 5px; /* Add some padding for touch target if needed, or visual separation */
            border-radius: 4px; /* Optional, but keeps it clean */
        }
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .layout-container {
            grid-template-columns: 160px 1fr 100px;
            padding: 20px;
            gap: 20px;
        }
    }
</style>
