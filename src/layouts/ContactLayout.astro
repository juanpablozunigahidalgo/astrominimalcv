---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Minimalist Contact" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="contact-only-layout">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: white;
    font-family: Consolas, 'Courier New', monospace;
    color: black;
    font-size: 13px;
  }
  a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s;
  }
  a:hover {
    text-decoration: none;
    opacity: 0.8;
  }
</style>

<style>
  .contact-only-layout {
    max-width: 900px;
    margin: 120px auto;
    padding: 0 clamp(24px, 6vw, 120px);
    text-align: left;
    line-height: 1.6;
  }
</style>
